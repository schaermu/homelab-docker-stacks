{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "linuxserver/jellyfin"
      ],
      "allowedVersions": "/^[0-9]{1,3}\\.[0-9]+\\.[0-9]+$/",
      "changelogUrl": "https://github.com/jellyfin/jellyfin"
    },
    {
      "matchPackageNames": [
        "deluan/navidrome"
      ],
      "changelogUrl": "https://github.com/navidrome/navidrome"
    },
    {
      "matchPackageNames": [
        "linuxserver/sonarr"
      ],
      "changelogUrl": "https://github.com/Sonarr/Sonarr"
    },
    {
      "matchPackageNames": [
        "linuxserver/radarr"
      ],
      "changelogUrl": "https://github.com/Radarr/Radarr"
    },
    {
      "matchPackageNames": [
        "llinuxserver/lidarr"
      ],
      "changelogUrl": "https://github.com/linuxserver/docker-lidarr"
    },
    {
      "matchPackageNames": [
        "linuxserver/bazarr"
      ],
      "changelogUrl": "https://github.com/morpheus65535/bazarr"
    },
    {
      "matchPackageNames": [
        "linuxserver/jackett"
      ],
      "schedule": [
        "on friday"
      ],
      "changelogUrl": "https://github.com/Jackett/Jackett"
    },
    {
      "matchPackageNames": [
        "ghcr.io/cleanuparr/cleanuparr"
      ],
      "changelogUrl": "https://github.com/Cleanuparr/Cleanuparr"
    },
    {
      "matchPackageNames": [
        "fallenbagel/jellyseerr"
      ],
      "changelogUrl": "https://github.com/Fallenbagel/jellyseerr"
    },
    {
      "groupName": "victoriametrics",
      "changelogUrl": "https://github.com/VictoriaMetrics/VictoriaMetrics",
      "matchPackageNames": [
        "victoriametrics{/,}**"
      ]
    },
    {
      "matchPackageNames": [
        "grafana/grafana-oss"
      ],
      "changelogUrl": "https://github.com/grafana/grafana"
    },
    {
      "groupName": "immich",
      "changelogUrl": "https://github.com/immich-app/immich",
      "matchPackageNames": [
        "ghcr.io/immich-app{/,}**"
      ]
    },
    {
      "matchPackageNames": [
        "pihole/pihole"
      ],
      "changelogUrl": "https://github.com/pi-hole/pi-hole"
    },
    {
      "matchPackageNames": [
        "traefik"
      ],
      "changelogUrl": "https://github.com/traefik/traefik"
    },
    {
      "matchPackageNames": [
        "crowdsecurity/crowdsec"
      ],
      "changelogUrl": "https://github.com/crowdsecurity/crowdsec"
    },
    {
      "matchPackageNames": [
        "koenkk/zigbee2mqtt"
      ],
      "changelogUrl": "https://github.com/Koenkk/zigbee2mqtt"
    },
    {
      "matchPackageNames": [
        "kpetrem/mqtt-exporter"
      ],
      "changelogUrl": "https://github.com/kpetremann/mqtt-exporter"
    },
    {
      "matchPackageNames": [
        "vaultwarden/server"
      ],
      "changelogUrl": "https://github.com/dani-garcia/vaultwarden"
    },
    {
      "matchPackageNames": [
        "linuxserver/transmission"
      ],
      "allowedVersions": "/^[0-9]{1,3}\\.[0-9]+\\.[0-9]+$/",
      "changelogUrl": "https://github.com/linuxserver/docker-transmission"
    },
    {
      "groupName": "adventurelog",
      "changelogUrl": "https://github.com/seanmorley15/AdventureLog",
      "matchPackageNames": [
        "ghcr.io/seanmorley15/adventurelog{/,}**"
      ]
    },
    {
      "matchPackageNames": [
        "ghcr.io/schaermu/schaermu-ch"
      ],
      "allowedVersions": "/^[0-9]{4}\\.[0-9]{2}\\.[0-9]{2}$/",
      "changelogUrl": "https://github.com/schaermu/schaermu-ch"
    },
    {
      "matchPackageNames": [
        "ghcr.io/steveiliop56/tinyauth"
      ],
      "changelogUrl": "https://github.com/steveiliop56/tinyauth"
    },
    {
      "matchPackageNames": [
        "ghcr.io/pocket-id/pocket-id"
      ],
      "changelogUrl": "https://github.com/pocket-id/pocket-id"
    },
    {
      "matchPackageNames": [
        "glanceapp/glance"
      ],
      "changelogUrl": "https://github.com/glanceapp/glance"
    }
  ]
}
