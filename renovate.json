{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "dgtlmoon/sockpuppetbrowser"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "linuxserver/jellyfin"
      ],
      "allowedVersions": "/^[0-9]{1,3}\\.[0-9]+\\.[0-9]+$/",
      "customChangelogUrl": "https://github.com/jellyfin/jellyfin"
    },
    {
      "matchPackageNames": [
        "deluan/navidrome"
      ],
      "customChangelogUrl": "https://github.com/navidrome/navidrome"
    },
    {
      "matchPackageNames": [
        "linuxserver/sonarr"
      ],
      "customChangelogUrl": "https://github.com/Sonarr/Sonarr"
    },
    {
      "matchPackageNames": [
        "linuxserver/radarr"
      ],
      "customChangelogUrl": "https://github.com/Radarr/Radarr"
    },
    {
      "matchPackageNames": [
        "llinuxserver/lidarr"
      ],
      "customChangelogUrl": "https://github.com/linuxserver/docker-lidarr"
    },
    {
      "matchPackageNames": [
        "linuxserver/bazarr"
      ],
      "customChangelogUrl": "https://github.com/morpheus65535/bazarr"
    },
    {
      "matchPackageNames": [
        "linuxserver/jackett"
      ],
      "schedule": [
        "on friday"
      ],
      "customChangelogUrl": "https://github.com/Jackett/Jackett"
    },
    {
      "matchPackageNames": [
        "fallenbagel/jellyseerr"
      ],
      "customChangelogUrl": "https://github.com/Fallenbagel/jellyseerr"
    },
    {
      "groupName": "victoriametrics",
      "matchPackagePrefixes": [
        "victoriametrics"
      ],
      "customChangelogUrl": "https://github.com/VictoriaMetrics/VictoriaMetrics"
    },
    {
      "matchPackageNames": [
        "grafana/grafana-oss"
      ],
      "customChangelogUrl": "https://github.com/grafana/grafana"
    },
    {
      "groupName": "immich",
      "matchPackagePrefixes": [
        "ghcr.io/immich-app"
      ],
      "customChangelogUrl": "https://github.com/immich-app/immich"
    },
    {
      "matchPackageNames": [
        "pihole/pihole"
      ],
      "customChangelogUrl": "https://github.com/pi-hole/pi-hole"
    },
    {
      "matchPackageNames": [
        "traefik"
      ],
      "customChangelogUrl": "https://github.com/traefik/traefik"
    },
    {
      "matchPackageNames": [
        "crowdsecurity/crowdsec"
      ],
      "customChangelogUrl": "https://github.com/crowdsecurity/crowdsec"
    },
    {
      "matchPackageNames": [
        "koenkk/zigbee2mqtt"
      ],
      "customChangelogUrl": "https://github.com/Koenkk/zigbee2mqtt"
    },
    {
      "matchPackageNames": [
        "kpetrem/mqtt-exporter"
      ],
      "customChangelogUrl": "https://github.com/kpetremann/mqtt-exporter"
    },
    {
      "matchPackageNames": [
        "vaultwarden/server"
      ],
      "customChangelogUrl": "https://github.com/dani-garcia/vaultwarden"
    },
    {
      "matchPackageNames": [
        "linuxserver/transmission"
      ],
      "allowedVersions": "/^[0-9]{1,3}\\.[0-9]+\\.[0-9]+$/",
      "customChangelogUrl": "https://github.com/linuxserver/docker-transmission"
    },
    {
      "matchPackageNames": [
        "linuxserver/changedetection"
      ],
      "allowedVersions": "/^[0-9]{1,3}\\.[0-9]+\\.[0-9]+-ls[0-9]+$/"
    },
    {
      "matchPackageNames": [
        "ghcr.io/schaermu/changedetection.io-exporter"
      ],
      "customChangelogUrl": "https://github.com/schaermu/changedetection.io-exporter"
    },
    {
      "groupName": "adventurelog",
      "matchPackagePrefixes": [
        "ghcr.io/seanmorley15/adventurelog"
      ],
      "customChangelogUrl": "https://github.com/seanmorley15/AdventureLog"
    },
    {
      "matchPackageNames": [
        "ghcr.io/schaermu/schaermu-ch"
      ],
      "allowedVersions": "/^[0-9]{4}\\.[0-9]{2}\\.[0-9]{2}$/",
      "customChangelogUrl": "https://github.com/schaermu/schaermu-ch"
    },
  ]
}
